# Server port
PORT=8080

# Auth token required in the WebSocket hello message
AUTH_TOKEN=devtoken

# Twilio TURN credentials (recommended — auto-fetches ephemeral TURN/STUN)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Manual ICE servers fallback (used if Twilio is not configured)
# ICE_SERVERS_JSON=[{"urls":"turn:your-server.com:3478","username":"user","credential":"pass"}]
ICE_SERVERS_JSON=[]

# LLM provider for voice agent: "claude", "openai", or "ollama" (auto-detects if blank)
LLM_PROVIDER=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Ollama settings (used when LLM_PROVIDER=ollama or no API key set)
OLLAMA_MODEL=qwen2.5:14b
OLLAMA_URL=http://localhost:11434

# Web Search (fallback: Tavily → Brave → DuckDuckGo)
TAVILY_API_KEY=          # 1,000 searches/month free — https://tavily.com
BRAVE_API_KEY=           # ~1,000 searches/month free — https://brave.com/search/api
# DuckDuckGo needs no key (unlimited free fallback)

# Custom system prompt (optional — overrides default voice assistant prompt)
SYSTEM_PROMPT=
